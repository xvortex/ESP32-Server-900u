body {
background-color: #000020;
color: #ffffff;
font-size: 14px;
font-weight: bold;
margin: 0 0 0 0.0;
overflow-y:hidden;
padding: 0.4em 0.4em 0.4em 0.6em;
} 

.btn {
transition-duration: 0.4s;
box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
background-color: DodgerBlue;
border: none;
color: white;
padding: 12px 16px;
font-size: 16px;
cursor: pointer;
font-weight: bold;
}

.btn:hover {
background-color: RoyalBlue;
}

.slct  {
transition-duration: 0.4s;
box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
text-align: center;
-webkit-appearance: none;
background-color: DodgerBlue;
border: none;
color: white;
padding: 9px 1px;
font-size: 16px;
cursor: pointer;
font-weight: bold;
}

.slct:hover {
background-color: RoyalBlue;
}

